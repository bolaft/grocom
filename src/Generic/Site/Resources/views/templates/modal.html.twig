<div class="{% block class %} modal hide fade {% endblock %}" id="{% block id %}{% endblock %}">
    <div class="modal-header">
        {% block header %}{% endblock %}
        <button class="close" data-dismiss="modal">x</button>
    </div> <!-- /modal-header -->
    <div class="modal-body">
        {% block body %}{% endblock %}
    </div> <!-- /modal-body -->
    <div class="modal-footer"> 
        {% block footer %}
            <input class="btn" type="button" data-dismiss="modal" value="{% trans %}modal.close{% endtrans %}">
        {% endblock %}
    </div> <!-- /modal-footer -->
</div> <!-- /modal -->